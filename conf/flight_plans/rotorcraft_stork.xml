<!DOCTYPE flight_plan SYSTEM "flight_plan.dtd">

<flight_plan alt="32" ground_alt="26" lat0="43 33 50.83" lon0="1 28 52.61" max_dist_from_home="20" name="Stork Delivery" security_height="2">
  <header>
#include "autopilot.h"
</header>
  <waypoints>
    <waypoint height="3." name="HOME" x="0.0" y="0.0"/>
    <waypoint height="3." name="CLIMB" x="10.0" y="0.0"/>
    <waypoint height="3." name="STDBY" x="10.0" y="0.0"/>
    <waypoint height="3." name="delivery" x="15.0" y="15.0"/>
    <waypoint height="3." name="TD" x="5.0" y="5.0"/>
  </waypoints>
  <blocks>
    <block name="Wait GPS">
      <call fun="NavKillThrottle()"/>
      <while cond="!GpsFixValid()"/>
    </block>
    <block name="Geo init">
      <while cond="LessThan(NavBlockTime(), 10)"/>
      <call fun="NavSetGroundReferenceHere()"/>
    </block>
    <block key="h" name="Holding point">
      <call fun="NavKillThrottle()"/>
      <attitude pitch="0" roll="0" throttle="0" until="FALSE" vmode="throttle"/>
    </block>
    <block name="Start Engine">
      <call fun="NavResurrect()"/>
      <attitude pitch="0" roll="0" throttle="0" until="FALSE" vmode="throttle"/>
    </block>
    <block name="Takeoff" strip_button="Takeoff" strip_icon="takeoff.png">
      <exception cond="stateGetPositionEnu_f()->z > 2.0" deroute="Standby"/>
      <call fun="NavSetWaypointHere(WP_CLIMB)"/>
      <stay climb="0.5" vmode="climb" wp="CLIMB"/>
    </block>
    <block name="Standby" strip_button="Standby" strip_icon="home.png">
      <stay wp="STDBY"/>
    </block>
    <block name="Go to customer">
      <stay wp="delivery"/>
    </block>
    <block key="l" name="land here" strip_button="Land Here" strip_icon="land-right.png">
      <call fun="NavSetWaypointHere(WP_TD)"/>
    </block>
    <block name="land">
      <go wp="TD"/>
    </block>
    <block name="flare">
      <exception cond="NavDetectGround()" deroute="Holding point"/>
      <exception cond="!nav_is_in_flight()" deroute="landed"/>
      <call fun="NavStartDetectGround()"/>
      <stay climb="-0.8" vmode="climb" wp="TD"/>
    </block>
    <block name="landed">
      <call fun="NavKillThrottle()"/>
      <attitude pitch="0" roll="0" throttle="0" until="FALSE" vmode="throttle"/>
    </block>
  </blocks>
</flight_plan>
